
<% if auth %>

    <div class="row">

        <div class="nine columns">

            <h4>
                <%= @calendar[:current][:name] %> <%= @calendar[:current][:year] %>
                <div class="right">
                    <a href="/<%= @calendar[:prev][:year] %>/<%= @calendar[:prev][:month] %>/"><i  class="icon-left-open-big"></i></a>
                    <a href="/<%= @calendar[:next][:year] %>/<%= @calendar[:next][:month] %>/"><i class="icon-right-open-big"></i></a>
                </div>
            </h4>

            <div class="calendar">

                <div class="legend">
                    <% @calendar[:label].each do |label| %>
                        <div><%= label[:abbr] %></div>
                    <% end %>
                </div>


                <% @calendar[:weeks].each do |week_number, week| %>

                    <div class="week">
                        <% week.each do |day| %>
                            <% @a = [:today, :next, :prev].select{ |o| o if day[o] } %>
                            <a href="/<%= day[:year] %>/<%= day[:month] %>/<%= day[:day] %>" class="<%= @a.join(' ') %>"><%= day[:day] %></a>
                        <% end %>
                    </div>

                <% end %>
            </div>

        </div>

        <div class="three columns">

            <h4 class="row">
              <div class="two columns image"><img src="<%= auth.avatar %>" gumby-retina/></div>
              <div class="ten columns">&nbsp;<%= auth.name %></div>
            </h4>


            <div class="medium default btn"><a href="">Настройки</a></div>
            <div class="medium default btn"><%= link_to "Выход", signout_path %></div>

        </div>

    </div>

<% else %>

    <h3>Авторизация</h3>

    <% AUTH_CONFIG.each do | type, params | %>
        <div class="medium default btn"><%= link_to params['name'], "/auth/#{type}" %></div>
    <% end %>

    <br>

<% end %>